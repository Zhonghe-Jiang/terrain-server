<launch>

	<!-- Machine -->
	<machine name="localhost" address="localhost" env-loader="/opt/ros/indigo/env.sh"/>
	<arg name="machine" default="localhost" />
	
	<node pkg="octomap_server" type="octomap_server_node" name="octomap_server" machine="$(arg machine)">
		<param name="resolution" value="0.02" />
		<!-- fixed map frame (set to 'map' if SLAM or localization running!) -->
		<param name="frame_id" type="string" value="world" />
		<!-- maximum range to integrate (speedup!) -->
		<param name="sensor_model/max_range" value="5.0" />
		<!-- data source to integrate (PointCloud2) -->
		<remap from="cloud_in" to="/asus/depth_registered/points" />
	</node>

</launch>
