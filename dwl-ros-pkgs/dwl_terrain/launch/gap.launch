<launch>

	<!-- Machine -->
	<machine name="localhost" address="localhost" env-loader="/opt/ros/indigo/env.sh"/>
	<arg name="machine" default="localhost" />
	

	<node name="pallet_1" pkg="dwl_terrain" type="default_flat_terrain" output="screen" machine="$(arg machine)">
		<remap from="topic_output" to="asus/depth_registered/points" />
		<param name="world_frame" type="string" value="world" />
		<param name="center_x" type="double" value="0.1" />
		<param name="center_y" type="double" value="0." />
		<param name="width" type="double" value="1." />
		<param name="length" type="double" value="1.3" />
		<param name="yaw" type="double" value="0." />		
		<param name="resolution" type="double" value="0.01" />
		<param name="height" type="double" value="0." />
	</node>
	
	
	<node name="pallet_2" pkg="dwl_terrain" type="default_flat_terrain" output="screen" machine="$(arg machine)">
		<remap from="topic_output" to="asus/depth_registered/points" />
		<param name="world_frame" type="string" value="world" />
		<param name="center_x" type="double" value="1.8" />
		<param name="center_y" type="double" value="0." />
		<param name="width" type="double" value="1." />
		<param name="length" type="double" value="1.3" />
		<param name="yaw" type="double" value="0." />		
		<param name="resolution" type="double" value="0.01" />
		<param name="height" type="double" value="0." />
	</node>

	
	<node name="floor" pkg="dwl_terrain" type="default_flat_terrain" output="screen" machine="$(arg machine)">
		<remap from="topic_output" to="asus/depth_registered/points" />
		<param name="world_frame" type="string" value="world" />
		<param name="center_x" type="double" value="0.95" />
		<param name="center_y" type="double" value="0." />
		<param name="width" type="double" value="1." />
		<param name="length" type="double" value="0.4" />
		<param name="yaw" type="double" value="0." />		
		<param name="resolution" type="double" value="0.01" />
		<param name="height" type="double" value="-0.2" />
	</node>
	
</launch>
